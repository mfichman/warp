particle_system Explosion
{
    material GoldFire
    particle_width 5
    particle_height 5
    cull_each false
    quota 35
    billboard_type point
    billboard_rotation_type vertex

    emitter Ellipsoid
    {
        angle 360

        velocity_min 0
        velocity_max 0

        width 6
        height 6
        depth 6
        

        time_to_live 0.5
        
        colour_range_start 1 1 0.1
        colour_range_end 1 0.6 0.1
        
        direction 0 0 1
        duration 0.5
        emission_rate 1000
        //repeat_delay 2.0
    }

    affector Rotator
    {
        rotation_range_start 0
        rotation_range_end 360
    }

    affector ColourFader 
    {
        red -2
        blue -2
        green -2
    }

    affector Scaler
    {
        rate -4
    }
}

